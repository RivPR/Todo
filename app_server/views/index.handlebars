<h2>Welcome! </h2>
<h4>{{{title}}}</h4>

{{#if jobs}}
<table id="jobTable">
<thead>
<tr>
  <th>Name of Job</th>
  <th>Date Applied</th>
  <th>Comments</th>
</tr>
</thead>
<tbody>
{{#each jobs}}
<tr>
  <td>{{this.name}}</td>
  <td>{{this.date}}</td>
  <td>{{this.comments}}</td>
  <td><a href ="delete/{{this.id}}" class="button deleteButton" value={{this.id}}>Delete</td>
  <td><a href="edit/{{this.id}}" class="button editButton" value={{this.id}}>Edit</td>
</tr>
{{/each}}
{{/if}}


{{#if job}}
  {{#each job}}

  <form id="updateForm" action="../update/" method="POST">
  <input name="id" type="hidden" value="{{this.id}}">

  <input name="name" value="{{this.name}}">
  <input name="comments" value="{{this.comments}}">
  <input name="date" type="date" value="{{this.date}}">
  <button> Update </button>
  </form>
  {{/each}}
{{/if}}

</tbody>
</table>
<div id="addForm">

</div>
